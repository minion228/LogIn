<Window x:Class="Practic2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic2"
        mc:Ignorable="d"
      Title="LogIn" Width="400" Height="600">
    <Grid Background="#FFC1DB60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="140*"></ColumnDefinition>
            <ColumnDefinition Width="30*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbxLogin" Grid.Column="1" HorizontalAlignment="Center" Margin="0,54,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Height="48" FontSize="20" FontFamily="Yu Gothic UI Semilight" Foreground="#FF164007">
            <TextBox.ToolTip>
                <ToolTip>
                    введите логин
                </ToolTip>
            </TextBox.ToolTip>
        </TextBox>



        <TextBox x:Name="tbxPassword" Grid.Column="1" HorizontalAlignment="Center" Margin="0,54,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Height="48" FontSize="20" FontFamily="Yu Gothic UI Semilight" Foreground="#FF164007"/>
        <Button Grid.Column="1" Content="Войти" HorizontalAlignment="Center" Margin="0,21,0,0" Grid.Row="4" VerticalAlignment="Top" Width="164" Height="35" FontSize="18" Background="#FFF7E829" Click="Button_Click">

        </Button>

        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Margin="0,25,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Введите логин:" VerticalAlignment="Top" Width="260" FontSize="18" Foreground="#FF164007" FontWeight="Bold"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Margin="0,25,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Введите пароль:" VerticalAlignment="Top" Width="260" FontSize="18" FontWeight="Bold" Foreground="#FF164007"/>
        <Button Grid.Column="1" HorizontalAlignment="Center" Margin="0,6,0,0" Grid.Row="5" VerticalAlignment="Top" Width="208" FontSize="16"  Height="27"  FontStyle="Italic" Click="ButtonNew_Click" OverridesDefaultStyle="True">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FFC1DB60"/>
                    <Setter Property="BorderBrush" Value="#FFC1DB60"/>
                    <Setter Property="Content" Value="Зарегистрироваться"></Setter>
                    <Setter Property="Foreground" Value="Black"></Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" >
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Bottom"></ContentPresenter>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#FFC1DB60"></Setter>
                                        <Setter Property="Background" Value="#FFC1DB60"></Setter>
                                        <Setter Property="FontWeight" Value="Black"></Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="36,67,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="186" Source="/1e2efe2963f04d1895ee40a219b16b98.jpg" Stretch="Fill"/>

    </Grid>
</Window>