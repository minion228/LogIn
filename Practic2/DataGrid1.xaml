<Window x:Class="Practic2.DataGrid1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic2"
        mc:Ignorable="d"
        Title="DataGrid1" Height="450" Width="488">
    <Grid>
        <DataGrid x:Name="ProductsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,136,0" FontSize="22">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}"></DataGridTextColumn>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Margin="390,217,10,22"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="357,10,0,0" VerticalAlignment="Top" Height="42" Width="121" Click="Button_Click"/>
    </Grid>
</Window>
