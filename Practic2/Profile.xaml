<Window x:Class="Practic2.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic2"
        mc:Ignorable="d"
        Title="Profile" Height="450" Width="800">
    <Grid Background="#FFC1DB60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550*"></ColumnDefinition>
            <ColumnDefinition Width="90*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="500*"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
        <ListBox x:Name="lstbx" Margin="10,10,10,10" Grid.Row="1" Background="#FFEDF9C1"/>
        <TextBox x:Name="tbxName" HorizontalAlignment="Left" Margin="18,42,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="280" FontSize="24" Height="62"/>
        <TextBlock HorizontalAlignment="Left" Margin="18,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="32" Width="140"><Run Language="ru-ru" Text="Название"/></TextBlock>
        <TextBox x:Name="tbxPrice" HorizontalAlignment="Left" Margin="313,43,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="155" FontSize="24" Height="61"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="32" Width="110"><Run Language="ru-ru" Text="Цена"/></TextBlock>
        <TextBox x:Name="tbxDescr" HorizontalAlignment="Left" Margin="18,158,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="450" FontSize="24" Height="94"/>
        <TextBlock HorizontalAlignment="Left" Margin="18,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Height="32" Width="110"><Run Language="ru-ru" Text="Описание"/></TextBlock>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="5,19,0,0" VerticalAlignment="Top" Click="Button_Click" Height="31" Width="105" FontSize="20" Background="#FFB1B74C" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="5,148,0,0" VerticalAlignment="Top" Click="Button_Click" Height="31" Width="105" FontSize="20" Background="#FFB1B74C" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="5,271,0,0" VerticalAlignment="Top" Click="Button_Click" Height="31" Width="105" FontSize="20" Background="#FFB1B74C" Grid.Column="1" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
